
<h1>Book details</h1>
<div class ="book_details">
<%= will_paginate @books %>
  <% Book.find_each do |c| %>
    <% if contributor? c %>

      <%= link_to(:action => 'show' , :id => c.id) do %> 
        <div class="book_item">
          <h4 class="book_title"><%= c.bname %></h4>
        </div>
      <% end %>
    <% end %>
  <% end %>


</div>
<p class="button"><%= link_to "Add new Book", {:action => 'new' }%></p>

