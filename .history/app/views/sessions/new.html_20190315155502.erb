<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="form">
  
    <%= form_for(:session, url: login_path) do |f| %>
      <table>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email, class: 'form-control' %>
          <% if @session.errors[:email].any? %>
            <div class="errors"><%= @user.errors[:email] %></div>
          <% end %>
        </td>
      </tr>
      <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password, class: 'form-control' %></td>
      </tr>
      </table>
      <%= f.submit "Log in", class: "button-form" %>
    <% end %>

  </div>

